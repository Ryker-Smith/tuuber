<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.fachtnaroe.tuuber">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".screen01_Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- To control the action of the soft keyboard
        and how the background is rendered use:
        android:windowSoftInputMode="stateVisible|adjustPan" -->
        <activity android:name=".screen02_Login"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".screen03_MainMenu"
            android:label="@string/title_activity_screen03__main_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".screen04_Matches"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".screen05_Conversations"
            android:label="screen05_Conversations"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".screen06_Register"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".screen07_Routes"/>
        <activity android:name=".screen08_ChatWith"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".screen09_Settings"
            android:label="@string/title_activity_screen09__settings"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".screen10_TermsAndConditions"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".screen11_Pools"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name="com.google.appinventor.components.runtime.ListPickerActivity"
            android:windowSoftInputMode="stateVisible|adjustPan"/>
        <activity android:name=".experimental_doNotUseThis"
            android:windowSoftInputMode="adjustPan"/>

    </application>

</manifest>